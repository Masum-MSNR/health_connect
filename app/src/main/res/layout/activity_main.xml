<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/health_connect_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_health_connect_logo" />

    <TextView
        android:id="@+id/primary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/health_connect_logo"
        android:layout_marginTop="20dp"
        android:justificationMode="inter_word"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Primary description" />

    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/primary_text"
        android:justificationMode="inter_word"
        android:paddingHorizontal="20dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        tools:text="Secondary description" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/grant_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/primary_text"
        android:layout_margin="20dp"
        android:text="@string/grant_permissions"
        android:textAllCaps="false"
        android:visibility="gone"
        app:cornerRadius="25dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/health_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/primary_text"
        android:layout_margin="20dp"
        android:text="@string/open_health_data"
        android:textAllCaps="false"
        android:visibility="gone"
        app:cornerRadius="25dp" />

</RelativeLayout>